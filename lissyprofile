    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const card = document.querySelector('.profile-card');
            const birds = document.querySelectorAll('.bird-decoration');
            
            card.addEventListener('mouseenter', () => {
                birds.forEach(bird => {
                    bird.style.transition = 'all 0.5s ease';
                    bird.style.transform = `translate(${Math.random() * 20 - 10}px, ${Math.random() * 20 - 10}px)`;
                });
            });
            
            card.addEventListener('mouseleave', () => {
                birds.forEach((bird, index) => {
                    const positions = [
                        { top: '10px', left: '20px', transform: 'rotate(0)' },
                        { bottom: '15px', right: '25px', transform: 'rotate(0)' },
                        { top: '50%', right: '10px', transform: 'rotate(30deg)' }
                    ];
                    Object.assign(bird.style, positions[index]);
                });
            });
            

            const header = document.querySelector('h1');
            const colors = ['#6A5ACD', '#9370DB', '#8A2BE2', '#9932CC'];
            let currentColor = 0;
            
            setInterval(() => {
                currentColor = (currentColor + 1) % colors.length;
                header.style.color = colors[currentColor];
            }, 3000);
        });
    </script>
